<div class="page-header">
    <h1>{{title}}</h1>
</div>

<div class="list-group">
    {{#each rooms}}
    <a href="/chatting/room?roomID={{ roomID }}" class="list-group-item">
        <span class="badge">{{ memberCount }}</span>
        {{ roomName }}
    </a>
    {{/each}}
</div>

<div>
    <form method="post">
        <input type="text" class="form-control" id="roomname" name="roomname" placeholder="Room Name" style="width: 180px; float: left; margin-right: 10px;">
        <button type="submit" class="btn btn-default" style="float: left">Create Room</button>
    </form>
</div>

{{#if msg}}
<script type="text/javascript">
    alert('{{ msg }}');
</script>
{{/if}}